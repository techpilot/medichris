#: import Window kivy.core.window.Window

<FlatButton@ButtonBehavior+Label>:
    text: 'default'

<AdminWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (.01,.01,.01,.01)
        Rectangle:
            size: self.size
            pos: self.pos
    
    BoxLayout:
        id: top_nav
        size_hint_y: None
        height: 30
        canvas.before:
            Color:
                rgba: (.131, .133, .255, 155)
            Rectangle:
                size: self.size
                pos: self.pos
        

        Label:
            text: 'Admin Dashboard'
            font_name: 'alpha'
            bold: True
            size_hint: (.9,None)
            height: 30
        FlatButton:
            id: close
            text: 'logout'
            color: (0, 0, 1, 1)
            underline: True
            font_name: 'Pacifico'
            size_hint: (.05, None)
            height: 30
            on_release: root.logout()
        FlatButton:
            id: close
            text: 'exit'
            color: (1, 0, 0, 1)
            underline: True
            font_name: 'Pacifico'
            size_hint: (.05, None)
            height: 30
            on_release: Window.close()
    BoxLayout:
        id: content_nav
        
        BoxLayout:
            id: nav_tabs
            size_hint_x: .2
            orientation: 'vertical'
            spacing: 3
            canvas.before:
                Color:
                    rgba: (.131, .133, .255, 143)
                Rectangle:
                    size: self.size
                    pos: self.pos

            ToggleButton:
                id: user_toggle
                text: 'Manage Users'
                font_name: "amita-bold"
                size_hint_y: .06
                state: 'down'
                background_color: (.131, .133, .255, 143)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)
            ToggleButton:
                id: products_toggle
                text: 'Manage Products'
                font_name: "amita-bold"
                size_hint_y: .06
                background_color: (.131, .133, .255, 143)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)
            ToggleButton:
                id: analysis_toggle
                text: 'Product Analysis'
                font_name: "amita-bold"
                size_hint_y: .06
                background_color: (.131, .133, .255, 143)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)
            Label:
                id: sp
                text: ''
                size_hint_y: .7
        BoxLayout:
            id: all_content
            size_hint_x: .85
            padding: (20,10)
            ScreenManager:
                id: scrn_mngr
                Screen:
                    id: scrn_content
                    name: 'scrn_content'
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        BoxLayout:
                            id: scrn_contents
                        BoxLayout:
                            id: ops_fields
                            spacing: 10
                            size_hint_y: None
                            height: 35
                        BoxLayout:
                            id: ops_btns
                            spacing: 10
                            size_hint_y: None
                            height: 45
                            Button:
                                id: crud_add
                                text: 'Add User'
                                background_normal: ''
                                background_color: (.06, .45, .50, 1)
                                on_release: root.add_user_fields()
                            Button:
                                id: crud_update
                                text: 'Update User'
                                background_normal: ''
                                background_color: (.06, .45, .50, 1)
                                on_release: root.update_user_fields()
                            Button:
                                id: crud_remove
                                text: 'Remove User'
                                background_normal: ''
                                background_color: (.06, .45, .50, 1)
                                on_release: root.remove_user_fields()
                Screen:
                    id: scrn_product_content
                    name: 'scrn_product_content'
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        BoxLayout:
                            id: scrn_product_contents
                        BoxLayout:
                            id: ops_fields_p
                            spacing: 10
                            size_hint_y: None
                            height: 35
                        BoxLayout:
                            id: ops_btns_p
                            spacing: 10
                            size_hint_y: None
                            height: 45
                            Button:
                                id: crud_add_p
                                text: 'Add Product'
                                background_normal: ''
                                background_color: (.06, .45, .50, 1)
                                on_release: root.add_product_fields()
                            Button:
                                id: crud_update_p
                                text: 'Update Product'
                                background_normal: ''
                                background_color: (.06, .45, .50, 1)
                                on_release: root.update_product_fields()
                            Button:
                                id: crud_remove_p
                                text: 'Remove Product'
                                background_normal: ''
                                background_color: (.06, .45, .50, 1)
                                on_release: root.remove_product_fields()
                Screen:
                    id: scrn_analysis
                    name: 'scrn_analysis'
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        BoxLayout:
                            # orientation: 'vertical'
                            size_hint_y: None
                            height: 45
                            Spinner:
                                id: target_product
                                text: 'Choose Product'
                                background_color: (.06, .50, .50, 1)
                                on_state: root.filter_ana()
                            Button:
                                id: submit_analysis
                                text: 'View Stats'
                                background_normal: ''
                                background_color: (.06, .45, .50, 1)
                                size_hint_x: .3
                                on_release: root.view_stats()
                        BoxLayout:
                            id: analysis_res
                        BoxLayout:
                            id: ops_fields_a
                            spacing: 10
                            size_hint_y: None
                            height: 35
                        BoxLayout:
                            id: ops_btns_a
                            spacing: 10
                            size_hint_y: None
                            height: 45
                            Button:
                                id: crud_add_a
                                text: 'Remove'
                                background_normal: ''
                                background_color: (.06, .45, .50, 1)
                                on_release: root.remove_analysis_fields()
                            Button:
                                id: date_filter
                                text: 'Date Stats'
                                background_normal: ''
                                background_color: (.06, .45, .50, 1)
                                on_release: root.dated_analysis_fields()
                            Button:
                                id: date_filter
                                text: 'Month Stats'
                                background_normal: ''
                                background_color: (.06, .45, .50, 1)
                                on_release: root.monthd_analysis_fields()
                            Button:
                                id: date_filter
                                text: 'Daily Sales'
                                background_normal: ''
                                background_color: (.06, .45, .50, 1)
                                on_release: root.daily_sales_fields()

                        